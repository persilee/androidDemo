<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabLayoutActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="使用 XTabLayout + ViewPager2 实现"
        android:textSize="16sp"
        android:gravity="center"/>

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xTabTextColor="@color/textColor"
        app:xTabMode="scrollable"
        app:xTabTextSize="14sp"
        app:xTabDividerHeight="2dp"
        app:xTabDividerColor="@color/colorPrimary"
        app:xTabSelectedTextColor="@color/colorPrimary"
        app:xTabSelectedTextSize="16sp"
        android:elevation="10dp"
        android:translationZ="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

</LinearLayout>